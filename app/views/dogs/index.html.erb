<p id="notice"><%= notice %></p>

<h1>Dogs that need Forever Homes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= dog.description %></td>
        <td><%= link_to 'Show', dog, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog),  class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' },  class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path, class: "btn btn-info" %>

<%= link_to 'Information Page', info_pages_path, class: "btn btn-success "%>

<%= link_to 'Main Page', root_path, class:"btn btn-primary" %>
